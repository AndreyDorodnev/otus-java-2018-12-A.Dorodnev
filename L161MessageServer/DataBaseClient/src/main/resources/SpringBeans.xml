<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="hibernateService" class="service.HibernateService">
        <constructor-arg>
            <list>
                <value type="java.lang.Class">model.AddressDataSet</value>
                <value type="java.lang.Class">model.PhoneDataSet</value>
                <value type="java.lang.Class">model.UserDataSet</value>
            </list>
        </constructor-arg>
    </bean>

    <bean id="dbService" class="service.DBServiceHibernate">
        <constructor-arg>
            <value>#{ hibernateService.getSessionFactory()}</value>
        </constructor-arg>
    </bean>

    <bean id="userDbService" class="service.UserDbService">
        <constructor-arg>
            <value>#{ dbService}</value>
        </constructor-arg>
    </bean>

    <bean id="dataBaseService" class="DataBaseService" >
        <property name="userDbService" value="#{userDbService}"/>
    </bean>

</beans>